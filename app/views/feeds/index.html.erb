<table border>
  <tr>
    <td><%= link_to "Add new feedâ€¦", new_feed_path %></td>
  </tr>
  <% @feeds.each do |feed| %>
    <tr>
      <td>
        <%= link_to feed.title, feed_statistics_path(feed) %><br>
        <%= link_to feed_path(feed), feed %><br>

        <% if feed.loaded? %>
          <% if feed.last_version %>
            Last version: <%= feed.last_version %>
          <% else %>
            Status: XML parsing error
          <% end %>
        <% elsif feed.load_error %>
          Status: <%= feed.load_error %>
        <% else %>
          Last version: not loaded yet
        <% end %>
        <br>
        
        <%= link_to(feed.loaded? || feed.load_error ? "Reload" : "Load", reload_feed_path(feed)) %>
      </td>
    </tr>
  <% end %>
</table>
