<%= form_for(@feed) do |f| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
        <% @feed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :public_stats, "Make statistics page publicly accessible" %><br>
    <%= f.check_box :public_stats %>
  </div>
  <div class="field">
    <%= f.label :public_counts, "Make download counts visible to everyone" %><br>
    <%= f.check_box :public_counts %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
